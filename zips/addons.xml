<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.flixstick" version="0.0.1" name="FlixStick" provider-name="flixstick">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.requests" version="2.3.0"/>
        <import addon="script.module.parsedom" version="0.9.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="startup"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">FlixStick</summary>
        <description lang="en">Keyword installer</description>
        <disclaimer lang="en">Flixstick have no control over the content supplied in the keywords, the links are simply indexed to external sources available in the public domain. Please send any DMCA complaints to the relevant website hosting infringing content.</disclaimer>
        <language>en</language>
        <platform>all</platform>
        <website>https://www.flixstick.co.uk</website>
    </extension>
</addon>

<addon id="repository.flixstick" version="1.0" name="Flixstick Repo" provider-name="flixstick">
	<extension point="xbmc.addon.repository" name="Flixstick repo">
		<info compressed="false">https://github.com/flixstick/flixstick/raw/master/zips/addons.xml</info>
		<checksum>https://github.com/flixstick/flixstick/raw/master/zips/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.github.com/flixstick/flixstick/master/zips/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Flixstick Repo</summary>
		<description>Flixstick repo</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
